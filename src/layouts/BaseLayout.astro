---
export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  noIndex?: boolean;
}

import '../styles/global.css';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import CartSidebar from '../components/cart/CartSidebar';

const {
  title = 'Deco Moi — Souvenirs y Regalos Personalizados',
  description = 'Souvenirs y regalos personalizados hechos con el cuidado que cada recuerdo merece. Chocolates, velas, tejidos y más.',
  ogImage = '/images/og-default.jpg',
  noIndex = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://decomoi.com.ar');
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />

  <!-- SEO -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL.toString()} />
  {noIndex && <meta name="robots" content="noindex, nofollow" />}

  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:url" content={canonicalURL.toString()} />
  <meta property="og:site_name" content="Deco Moi" />
  <meta property="og:locale" content="es_AR" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&family=Open+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Store",
    "name": "Deco Moi",
    "description": "Souvenirs y regalos personalizados",
    "url": "https://decomoi.com.ar",
    "logo": "https://decomoi.com.ar/images/logo/logo.jpg",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Buenos Aires",
      "addressCountry": "AR"
    },
    "sameAs": [
      "https://instagram.com/deco_moi",
      "https://www.facebook.com/decomoi"
    ]
  })} />
</head>
<body class="min-h-screen flex flex-col">
  <Header />

  <main class="flex-1">
    <slot />
  </main>

  <Footer />

  <!-- Carrito sidebar (Preact island) -->
  <CartSidebar client:only="preact" />

  <!-- WhatsApp flotante -->
  <a
    href={`https://wa.me/${import.meta.env.PUBLIC_WHATSAPP_NUMBER || '5491112345678'}?text=${encodeURIComponent(import.meta.env.PUBLIC_WHATSAPP_MESSAGE || 'Hola! Tengo una consulta')}`}
    target="_blank"
    rel="noopener noreferrer"
    class="fixed bottom-6 right-6 z-50 bg-[#25D366] text-white w-14 h-14 rounded-full flex items-center justify-center shadow-lg hover:shadow-xl hover:scale-110 transition-all duration-300 group"
    aria-label="Contactar por WhatsApp"
  >
    <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
    </svg>
    <span class="absolute right-16 bg-white text-dark-gray text-sm px-3 py-2 rounded-lg shadow-md opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap pointer-events-none">
      ¿Necesitás ayuda?
    </span>
  </a>

  <!-- Script global para agregar al carrito -->
  <script>
    import { addToCart, toggleCart } from '@/stores/cartStore';

    function setupCartButtons() {
      // Botones de producto card
      document.querySelectorAll('.add-to-cart-btn').forEach((btn) => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          const el = btn as HTMLElement;
          addToCart({
            id: parseInt(el.dataset.productId || '0'),
            name: el.dataset.productName || '',
            slug: el.dataset.productSlug || '',
            sku: el.dataset.productSku || '',
            price: parseFloat(el.dataset.productPrice || '0'),
            image: el.dataset.productImage || '',
          });
        });
      });

      // Botón agregar en detalle de producto
      const mainBtn = document.getElementById('add-to-cart-main');
      if (mainBtn) {
        console.log('Botón principal de carrito listo');
        mainBtn.addEventListener('click', (e) => {
          e.preventDefault();
          console.log('Click en Agregar al carrito');
          const el = mainBtn as HTMLElement;
          const qtyInput = document.getElementById('qty-input') as HTMLInputElement;
          const qty = qtyInput ? parseInt(qtyInput.value) : 1;
          
          const itemData = {
            id: parseInt(el.dataset.productId || '0'),
            name: el.dataset.productName || '',
            slug: el.dataset.productSlug || '',
            sku: el.dataset.productSku || '',
            price: parseFloat(el.dataset.productPrice || '0'),
            image: el.dataset.productImage || '',
            variantId: el.dataset.variantId ? parseInt(el.dataset.variantId) : undefined,
            variantName: el.dataset.variantName || undefined,
          };
          
          console.log('Agregando al carrito:', itemData, 'Cantidad:', qty);
          addToCart(itemData, qty);
        });
      }

      // Botón carrito en header
      const cartToggle = document.getElementById('cart-toggle');
      cartToggle?.addEventListener('click', () => toggleCart());
    }

    // Ejecutar al cargar y en cada navegación de Astro
    setupCartButtons();
    document.addEventListener('astro:after-swap', setupCartButtons);
  </script>
</body>
</html>
