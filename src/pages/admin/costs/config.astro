import AdminLayout from '@/layouts/AdminLayout.astro';
import { db } from '@/lib/db/connection';
import { costItems, shippingRealCosts, products, productCostItems, supplies } from '@/lib/db/schema';
import { Calculator, Truck, Package, Plus, Trash2, Save, Archive, ExternalLink } from 'lucide-react';
import { eq, inArray, and } from 'drizzle-orm';

// Fetch initial data
const allCostItems = await db.select().from(costItems).orderBy(costItems.name);
const allShippingCosts = await db.select().from(shippingRealCosts).orderBy(shippingRealCosts.zone);
const allProducts = await db.select().from(products).where(eq(products.isActive, true)).orderBy(products.name);
const allSupplies = await db.select().from(supplies).where(eq(supplies.isActive, true)).orderBy(supplies.name);

// Extract unique supply categories for tabs
const supplyCategories = [...new Set(allSupplies.map(s => s.category))].sort();

// Group supplies for hierarchical display
const rootSupplies = allSupplies.filter(s => !s.parentId || !allSupplies.some(p => p.id === s.parentId));
const suppliesByParent = new Map();
allSupplies.forEach(s => {
    if (s.parentId) {
        if (!suppliesByParent.has(s.parentId)) suppliesByParent.set(s.parentId, []);
        suppliesByParent.get(s.parentId).push(s);
    }
});

const SUPPLY_ICONS: Record<string, string> = {
  'chocolates': 'üç´',
  'hojas': 'üìÑ',
  'velas': 'üïØÔ∏è',
  'cajas': 'üì¶',
  'extras': '‚ú®',
  'tejidos': 'üßµ'
};

// We need a map of product -> cost items for the UI calculations
const allProductLinks = await db.select().from(productCostItems);
const productCostMap = new Map();
allProductLinks.forEach(link => {
    if (!productCostMap.has(link.productId)) productCostMap.set(link.productId, []);
    productCostMap.get(link.productId).push(link.costItemId);
});
