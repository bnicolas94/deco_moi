---
import AdminLayout from '@/layouts/AdminLayout.astro';
import { db } from '@/lib/db/connection';
import { costItems, shippingRealCosts, products, productCostItems } from '@/lib/db/schema';
import { Calculator, Truck, Package, Plus, Trash2, Save } from 'lucide-react';
import { eq, inArray } from 'drizzle-orm';

// Fetch initial data
const allCostItems = await db.select().from(costItems).orderBy(costItems.name);
const allShippingCosts = await db.select().from(shippingRealCosts).orderBy(shippingRealCosts.zone);
const allProducts = await db.select().from(products).where(eq(products.isActive, true)).orderBy(products.name);

// We need a map of product -> cost items for the UI calculations
const allProductLinks = await db.select().from(productCostItems);
const productCostMap = new Map();
allProductLinks.forEach(link => {
    if (!productCostMap.has(link.productId)) productCostMap.set(link.productId, []);
    productCostMap.get(link.productId).push(link.costItemId);
});
---

<AdminLayout title="Configuración de Costos">
    <div class="max-w-7xl mx-auto pb-20">
        <div class="mb-8">
            <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Configuración de Costos</h1>
            <p class="text-gray-500 mt-1 font-medium italic">Administra costos fijos, variables, reglas de envío y asociaciones.</p>
        </div>

        <div class="mb-6 border-b border-gray-200">
            <nav class="-mb-px flex space-x-8" aria-label="Tabs" id="cost-tabs">
                <button type="button" class="tab-btn w-1/3 py-4 px-1 text-center border-b-2 font-medium text-sm border-indigo-500 text-indigo-600 flex justify-center items-center gap-2" data-target="panel-library">
                    <Calculator className="w-5 h-5" />
                    Biblioteca Global
                </button>
                <button type="button" class="tab-btn w-1/3 py-4 px-1 text-center border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm flex justify-center items-center gap-2" data-target="panel-products">
                    <Package className="w-5 h-5" />
                    Vinculación a Productos
                </button>
                <button type="button" class="tab-btn w-1/3 py-4 px-1 text-center border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm flex justify-center items-center gap-2" data-target="panel-shipping">
                    <Truck className="w-5 h-5" />
                    Envíos por Zona
                </button>
            </nav>
        </div>

        <!-- 1. Biblioteca (Global) -->
        <div id="panel-library" class="tab-panel space-y-6">
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                <div class="p-6 border-b border-gray-50 flex items-center justify-between">
                    <h2 class="text-lg font-bold text-gray-900 flex items-center gap-2.5">Ítems de Costo</h2>
                    <button type="button" onclick="document.getElementById('modal-cost-item').classList.remove('hidden')" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-bold rounded-xl hover:bg-indigo-700 transition-colors shadow-sm focus:ring-4 focus:ring-indigo-100">
                        <Plus className="w-4 h-4 mr-2" />
                        Nuevo Ítem
                    </button>
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="bg-gray-50 border-b border-gray-100 text-xs font-bold text-gray-500 uppercase tracking-wider">
                                <th class="p-4">Nombre</th>
                                <th class="p-4">Tipo</th>
                                <th class="p-4">Valor</th>
                                <th class="p-4">Alcance</th>
                                <th class="p-4">Estado</th>
                                <th class="p-4 text-right">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100 bg-white items-tbody">
                            {allCostItems.length === 0 && (
                                <tr>
                                    <td colspan="5" class="p-8 text-center text-gray-400 italic">No hay ítems configurados. Empieza creando uno.</td>
                                </tr>
                            )}
                            {allCostItems.map(item => (
                                <tr class="hover:bg-gray-50/50 transition-colors">
                                    <td class="p-4 font-bold text-gray-900">{item.name}</td>
                                    <td class="p-4">
                                        <span class={`inline-flex items-center px-2 py-1 rounded-md text-xs font-bold ${item.type === 'percentage' ? 'bg-amber-100 text-amber-700' : 'bg-blue-100 text-blue-700'}`}>
                                            {item.type === 'percentage' ? 'Porcentaje (%)' : 'Monto Fijo ($)'}
                                        </span>
                                    </td>
                                    <td class="p-4 font-medium text-gray-700">
                                        {item.type === 'percentage' ? `${item.value}%` : `$${Number(item.value).toLocaleString('es-AR', {minimumFractionDigits: 2})}`}
                                    </td>
                                    <td class="p-4">
                                        <span class={`inline-flex items-center px-2 py-1 rounded text-xs font-bold ${item.isGlobal ? 'bg-indigo-100 text-indigo-700' : 'bg-gray-100 text-gray-700'}`}>
                                            {item.isGlobal ? 'Global' : 'Por Producto'}
                                        </span>
                                    </td>
                                    <td class="p-4">
                                        <button onclick={`toggleCostActive(${item.id}, ${!item.isActive})`} class="relative inline-flex h-6 w-11 items-center rounded-full transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" style={item.isActive ? "background-color: #4f46e5" : "background-color: #cbd5e1"}>
                                            <span class={`inline-block h-4 w-4 transform rounded-full bg-white transition-transform ${item.isActive ? 'translate-x-6' : 'translate-x-1'}`} />
                                        </button>
                                    </td>
                                    <td class="p-4 text-right">
                                        <button onclick={`deleteCostItem(${item.id})`} class="p-2 text-rose-500 hover:bg-rose-50 rounded-lg transition-colors inline-flex">
                                            <Trash2 className="w-4 h-4" />
                                        </button>
                                    </td>
                                </tr>
                            ))}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- 2. Vinculación a Productos -->
        <div id="panel-products" class="tab-panel hidden space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-8">
                <div class="md:col-span-4 space-y-4">
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-4">
                        <label class="block text-sm font-bold text-gray-700 mb-2">Seleccionar Producto</label>
                        <select id="product-selector" class="block w-full rounded-xl border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm h-11 border px-3 bg-white transition-all">
                            <option value="">Elegir producto...</option>
                            {allProducts.map(p => (
                                <option value={p.id} data-price={p.basePrice}>{p.name} (${Number(p.basePrice).toLocaleString('es-AR')})</option>
                            ))}
                        </select>
                    </div>

                    <div id="product-calc-card" class="bg-indigo-50 rounded-2xl p-6 hidden">
                        <h3 class="font-bold text-indigo-900 mb-2 border-b border-indigo-100 pb-2">Impacto Calculado (Referencial)</h3>
                        <div class="space-y-2 mt-4 text-sm text-indigo-800">
                            <div class="flex justify-between"><span>Precio Base:</span> <strong id="calc-base">$0</strong></div>
                            <div class="flex justify-between"><span>Total Costos:</span> <strong id="calc-costs" class="text-rose-600">-$0</strong></div>
                            <div class="flex justify-between pt-2 border-t border-indigo-100"><span>Margen Bruto:</span> <strong id="calc-margin">$0</strong></div>
                            <div class="flex justify-between text-xs mt-1"><span>Rentabilidad:</span> <strong id="calc-percent">0%</strong></div>
                        </div>
                    </div>
                </div>
                
                <div class="md:col-span-8">
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden relative">
                        <!-- Loading Overlay -->
                        <div id="product-loading" class="absolute inset-0 bg-white/80 z-10 flex items-center justify-center hidden backdrop-blur-sm">
                            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600"></div>
                        </div>

                        <div class="p-6 border-b border-gray-50 flex justify-between items-center bg-gray-50/50">
                            <div>
                                <h2 class="text-lg font-bold text-gray-900">Ítems Asignados</h2>
                                <p class="text-xs text-gray-500">Selecciona los costos que aplican a este producto.</p>
                            </div>
                            <button id="save-product-costs" disabled class="inline-flex items-center px-5 py-2.5 bg-gray-900 text-white text-sm font-bold rounded-xl hover:bg-black transition-colors shadow-sm disabled:opacity-50 disabled:cursor-not-allowed transform active:scale-95">
                                <Save className="w-4 h-4 mr-2" />
                                Guardar Enlaces
                            </button>
                        </div>
                        
                        <div class="p-6">
                            <form id="product-costs-form">
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                    {allCostItems.length === 0 ? (
                                        <div class="col-span-2 p-4 text-center text-gray-400 italic">No hay ítems configurados.</div>
                                    ) : allCostItems.filter(i => i.isActive).map(item => (
                                        <label class={`relative flex items-start p-4 cursor-pointer rounded-xl border transition-colors toggle-label ${item.isGlobal ? 'bg-indigo-50/50 border-indigo-200 ring-1 ring-indigo-500' : 'border-gray-200 hover:bg-gray-50'}`}>
                                            <div class="flex items-center h-5">
                                                <input type="checkbox" name="cost_items[]" value={item.id} data-type={item.type} data-value={item.value} data-global={item.isGlobal ? "true" : "false"} class="cost-checkbox h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 disabled:opacity-50 disabled:cursor-not-allowed" disabled checked={item.isGlobal} />
                                            </div>
                                            <div class="ml-3 flex flex-col w-full">
                                                <div class="flex justify-between items-center">
                                                    <span class="text-sm font-bold text-gray-900">{item.name}</span>
                                                    {item.isGlobal && <span class="text-[10px] uppercase font-bold bg-indigo-100 text-indigo-700 px-1.5 py-0.5 rounded">Global</span>}
                                                </div>
                                                <span class="text-xs text-gray-500">
                                                    {item.type === 'percentage' ? `${item.value}% sobre precio base` : `$${Number(item.value).toLocaleString('es-AR')} fijo`}
                                                </span>
                                            </div>
                                        </label>
                                    ))}
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 3. Costos de Envío -->
        <div id="panel-shipping" class="tab-panel hidden space-y-6">
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                <div class="p-6 border-b border-gray-50 flex items-center justify-between">
                    <div>
                        <h2 class="text-lg font-bold text-gray-900">Costos Reales de Envío</h2>
                        <p class="text-sm text-gray-500">Lo que el correo te cobra realmente por zona.</p>
                    </div>
                </div>
                <div class="p-6">
                    <form id="shipping-costs-form" class="space-y-4 max-w-2xl">
                        <div class="flex gap-4 items-end">
                            <div class="flex-1">
                                <label class="block text-sm font-bold text-gray-700 mb-1">Nombre de la Zona</label>
                                <input type="text" id="new-zone-name" placeholder="Ej: CABA, GBA, Centro..." class="block w-full rounded-xl border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm h-11 border px-3" />
                            </div>
                            <div class="flex-1">
                                <label class="block text-sm font-bold text-gray-700 mb-1">Costo Real ($)</label>
                                <input type="number" id="new-zone-cost" step="0.01" placeholder="Ej: 3500" class="block w-full rounded-xl border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm h-11 border px-3" />
                            </div>
                            <button type="button" onclick="handleAddZone()" class="inline-flex items-center justify-center px-6 py-2.5 bg-gray-900 text-white text-sm font-bold rounded-xl hover:bg-black transition-colors shadow-sm h-11">
                                Añadir
                            </button>
                        </div>
                    </form>

                    <div class="mt-8 border rounded-xl overflow-hidden">
                        <table class="w-full text-left border-collapse bg-white">
                            <thead>
                                <tr class="bg-gray-50 text-xs font-bold text-gray-500 uppercase tracking-wider border-b">
                                    <th class="p-4">Zona</th>
                                    <th class="p-4">Costo Real</th>
                                    <th class="p-4 text-right">Acciones</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100" id="shipping-zones-tbody">
                                {allShippingCosts.length === 0 && (
                                    <tr id="no-zones-msg"><td colspan="3" class="p-6 text-center text-gray-400 italic">No hay zonas configuradas.</td></tr>
                                )}
                                {allShippingCosts.map(sc => (
                                    <tr class="hover:bg-gray-50">
                                        <td class="p-4 font-bold text-gray-900">{sc.zone}</td>
                                        <td class="p-4 text-gray-700">${Number(sc.realCost).toLocaleString('es-AR', {minimumFractionDigits: 2})}</td>
                                        <td class="p-4 text-right">
                                            <button onclick={`deleteZone(${sc.id}, this)`} class="p-2 text-rose-500 hover:bg-rose-50 rounded-lg transition-colors">
                                                <Trash2 className="w-4 h-4" />
                                            </button>
                                        </td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Modal: Nuevo Ítem Global -->
    <div id="modal-cost-item" class="fixed inset-0 bg-slate-900/50 z-50 flex items-center justify-center hidden backdrop-blur-sm">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md mx-4 overflow-hidden transform transition-all">
            <div class="p-6 border-b border-gray-100 flex justify-between items-center">
                <h3 class="text-lg font-bold text-gray-900">Crear Ítem de Costo</h3>
                <button type="button" onclick="document.getElementById('modal-cost-item').classList.add('hidden')" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
            <form id="create-cost-item-form" class="p-6 space-y-4">
                <div class="space-y-1">
                    <label class="block text-sm font-bold text-gray-700">Nombre</label>
                    <input type="text" name="name" required placeholder="Ej: IIBB, Packaging..." class="block w-full rounded-xl border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm h-11 border px-3" />
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div class="space-y-1">
                        <label class="block text-sm font-bold text-gray-700">Tipo</label>
                        <select name="type" required class="block w-full rounded-xl border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm h-11 border px-3">
                            <option value="percentage">Porcentaje (%)</option>
                            <option value="fixed">Monto Fijo ($)</option>
                        </select>
                    </div>
                    <div class="space-y-1">
                        <label class="block text-sm font-bold text-gray-700">Valor</label>
                        <input type="number" step="0.01" name="value" required placeholder="Ej: 3.5" class="block w-full rounded-xl border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm h-11 border px-3" />
                    </div>
                </div>
                <div class="pt-2">
                    <label class="relative flex items-center p-3 cursor-pointer rounded-xl border border-gray-200 hover:bg-gray-50 transition-colors">
                        <div class="flex items-center h-5">
                            <input type="checkbox" name="isGlobal" value="true" class="h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" />
                        </div>
                        <div class="ml-3 flex flex-col">
                            <span class="text-sm font-bold text-gray-900">Aplicar a TODO el catálogo (Global)</span>
                            <span class="text-xs text-gray-500">Se vinculará automáticamente a todos los productos presentes y futuros.</span>
                        </div>
                    </label>
                </div>
                <div class="pt-4 mt-4 text-right border-t border-gray-50 flex justify-end gap-3">
                    <button type="button" onclick="document.getElementById('modal-cost-item').classList.add('hidden')" class="px-5 py-2.5 text-gray-600 font-bold hover:bg-gray-100 rounded-xl transition-colors">Cancelar</button>
                    <button type="submit" class="px-5 py-2.5 bg-indigo-600 text-white font-bold rounded-xl hover:bg-indigo-700 transition-colors shadow-sm">Guardar Ítem</button>
                </div>
            </form>
        </div>
    </div>
</AdminLayout>

<script is:inline define:vars={{ initialProductMap: Object.fromEntries(productCostMap) }}>
    // UI TABS LOGIC
    document.querySelectorAll('.tab-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            const tgt = e.currentTarget.getAttribute('data-target');
            document.querySelectorAll('.tab-panel').forEach(p => p.classList.add('hidden'));
            document.querySelectorAll('.tab-btn').forEach(b => {
                b.classList.remove('border-indigo-500', 'text-indigo-600');
                b.classList.add('border-transparent', 'text-gray-500');
            });
            e.currentTarget.classList.remove('border-transparent', 'text-gray-500');
            e.currentTarget.classList.add('border-indigo-500', 'text-indigo-600');
            document.getElementById(tgt).classList.remove('hidden');
        });
    });

    // COST ITEM CREATION
    document.getElementById('create-cost-item-form')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const fd = new FormData(e.target);
        const data = Object.fromEntries(fd.entries());
        data.isActive = true;
        data.isGlobal = fd.has('isGlobal');

        try {
            const res = await fetch('/api/costs/items', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            if (res.ok) {
                window.location.reload();
            } else {
                alert('Error al crear el ítem');
            }
        } catch (error) {
            console.error(error);
        }
    });

    window.toggleCostActive = async function(id, newState) {
        try {
            await fetch(`/api/costs/items/${id}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ isActive: newState })
            });
            window.location.reload();
        } catch (error) {
            console.error(error);
        }
    };

    window.deleteCostItem = async function(id) {
        if (!confirm('¿Seguro que deseas eliminar este ítem? Esto afectará los cálculos proyectados (pero no el historial guardado).')) return;
        try {
            await fetch(`/api/costs/items/${id}`, { method: 'DELETE' });
            window.location.reload();
        } catch (error) {
            console.error(error);
        }
    };

    // PRODUCT LINKING LOGIC
    let currentProductId = null;
    const prodSelector = document.getElementById('product-selector');
    const costCheckboxes = document.querySelectorAll('.cost-checkbox');
    const saveProdCostsBtn = document.getElementById('save-product-costs');
    const prodLoading = document.getElementById('product-loading');
    
    // UI Calculation els
    const calcCard = document.getElementById('product-calc-card');
    const calcBase = document.getElementById('calc-base');
    const calcCosts = document.getElementById('calc-costs');
    const calcMargin = document.getElementById('calc-margin');
    const calcPercent = document.getElementById('calc-percent');

    let currentBasePrice = 0;

    function recalculateImpact() {
        if (!currentProductId) return;
        let totalCost = 0;

        costCheckboxes.forEach(cb => {
            if (cb.checked) {
                const isPercent = cb.getAttribute('data-type') === 'percentage';
                const val = parseFloat(cb.getAttribute('data-value'));
                if (isPercent) {
                    totalCost += (currentBasePrice * (val / 100));
                } else {
                    totalCost += val;
                }
            }
        });

        const margin = currentBasePrice - totalCost;
        const roi = currentBasePrice > 0 ? ((margin / currentBasePrice) * 100).toFixed(1) : 0;

        calcBase.textContent = `$${currentBasePrice.toLocaleString('es-AR')}`;
        calcCosts.textContent = `-$${totalCost.toLocaleString('es-AR', {minimumFractionDigits: 2})}`;
        calcMargin.textContent = `$${margin.toLocaleString('es-AR', {minimumFractionDigits: 2})}`;
        calcPercent.textContent = `${roi}%`;
        
        calcMargin.className = margin >= 0 ? "text-emerald-600 font-extrabold" : "text-rose-600 font-extrabold";
        calcPercent.className = margin >= 0 ? "text-emerald-700" : "text-rose-700";
    }

    prodSelector?.addEventListener('change', async (e) => {
        const id = e.target.value;
        currentProductId = id;
        costCheckboxes.forEach(cb => cb.disabled = !id);
        saveProdCostsBtn.disabled = !id;
        
        if (!id) {
            calcCard.classList.add('hidden');
            costCheckboxes.forEach(cb => {
                const isGlobal = cb.getAttribute('data-global') === 'true';
                if(!isGlobal) {
                    cb.checked = false;
                    cb.closest('.toggle-label').classList.remove('ring-2', 'ring-indigo-500', 'bg-indigo-50/30');
                }
            });
            return;
        }

        const option = e.target.options[e.target.selectedIndex];
        currentBasePrice = parseFloat(option.getAttribute('data-price') || "0");
        calcCard.classList.remove('hidden');

        prodLoading.classList.remove('hidden');

        try {
            const res = await fetch(`/api/products/${id}/costs`);
            const links = await res.json();
            const linkedIds = links.map(l => l.costItemId.toString());

            costCheckboxes.forEach(cb => {
                const isGlobal = cb.getAttribute('data-global') === 'true';
                if (!isGlobal) {
                    cb.checked = linkedIds.includes(cb.value);
                    if (cb.checked) {
                        cb.closest('.toggle-label').classList.add('ring-2', 'ring-indigo-500', 'bg-indigo-50/30');
                    } else {
                        cb.closest('.toggle-label').classList.remove('ring-2', 'ring-indigo-500', 'bg-indigo-50/30');
                    }
                }
            });

            recalculateImpact();
        } catch (error) {
            console.error(error);
        } finally {
            prodLoading.classList.add('hidden');
        }
    });

    costCheckboxes.forEach(cb => {
        cb.addEventListener('change', (e) => {
            const label = e.target.closest('.toggle-label');
            if (e.target.checked) label.classList.add('ring-2', 'ring-indigo-500', 'bg-indigo-50/30');
            else label.classList.remove('ring-2', 'ring-indigo-500', 'bg-indigo-50/30');
            
            recalculateImpact();
        });
    });

    saveProdCostsBtn?.addEventListener('click', async () => {
        if (!currentProductId) return;
        const selectedIds = Array.from(costCheckboxes).filter(cb => cb.checked && cb.getAttribute('data-global') !== 'true').map(cb => parseInt(cb.value));
        
        saveProdCostsBtn.innerHTML = '<div class="animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2"></div> Guardando...';
        saveProdCostsBtn.disabled = true;

        try {
            await fetch(`/api/products/${currentProductId}/costs`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ costItemIds: selectedIds })
            });
            // Show toast/success
            saveProdCostsBtn.innerHTML = '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> Guardado!';
            saveProdCostsBtn.classList.replace('bg-gray-900', 'bg-emerald-600');
            saveProdCostsBtn.classList.replace('hover:bg-black', 'hover:bg-emerald-700');
            
            setTimeout(() => {
                saveProdCostsBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 mr-2"><path d="M15.2 3a2 2 0 0 1 1.4.6l3.8 3.8a2 2 0 0 1 .6 1.4V19a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z"/><path d="M17 21v-7a1 1 0 0 0-1-1H8a1 1 0 0 0-1 1v7"/><path d="M7 3v4a1 1 0 0 0 1 1h7"/></svg> Guardar Enlaces';
                saveProdCostsBtn.classList.replace('bg-emerald-600', 'bg-gray-900');
                saveProdCostsBtn.classList.replace('hover:bg-emerald-700', 'hover:bg-black');
                saveProdCostsBtn.disabled = false;
            }, 2000);
        } catch (err) {
            console.error(err);
            saveProdCostsBtn.innerHTML = 'Error al guardar';
            saveProdCostsBtn.disabled = false;
        }
    });

    // SHIPPING COSTS
    window.handleAddZone = async function() {
        const zoneInput = document.getElementById('new-zone-name');
        const costInput = document.getElementById('new-zone-cost');
        
        if (!zoneInput.value || !costInput.value) return alert('Completar ambos campos');

        try {
            const res = await fetch('/api/costs/shipping', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ zone: zoneInput.value, realCost: parseFloat(costInput.value) })
            });
            if (res.ok) window.location.reload();
            else alert('Error al guardar zona');
        } catch(error) {
            console.error(error);
        }
    }

    window.deleteZone = async function(id, btn) {
        if (!confirm('Realiamente eliminar la zona?')) return;
        try {
            await fetch(`/api/costs/shipping/${id}`, { method: 'DELETE' });
            btn.closest('tr').remove();
        } catch(err) {
            console.error(err);
        }
    }

</script>
