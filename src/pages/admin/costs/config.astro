<script is:inline define:vars={{ initialProductMap: Object.fromEntries(productCostMap) }}>
    // UI TABS LOGIC
    document.querySelectorAll('.tab-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            const tgt = e.currentTarget.getAttribute('data-target');
            document.querySelectorAll('.tab-panel').forEach(p => p.classList.add('hidden'));
            document.querySelectorAll('.tab-btn').forEach(b => {
                b.classList.remove('border-indigo-500', 'text-indigo-600');
                b.classList.add('border-transparent', 'text-gray-500');
            });
            e.currentTarget.classList.remove('border-transparent', 'text-gray-500');
            e.currentTarget.classList.add('border-indigo-500', 'text-indigo-600');
            document.getElementById(tgt).classList.remove('hidden');
        });
    });

    // SUPPLY CATEGORY TABS LOGIC
    document.querySelectorAll('.supply-tab-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            const cat = e.currentTarget.getAttribute('data-category');
            
            // UI Update Buttons
            document.querySelectorAll('.supply-tab-btn').forEach(b => {
                b.classList.remove('bg-indigo-600', 'text-white', 'border-indigo-600', 'shadow-sm');
                b.classList.add('bg-white', 'text-gray-500', 'border-gray-200');
            });
            e.currentTarget.classList.remove('bg-white', 'text-gray-500', 'border-gray-200');
            e.currentTarget.classList.add('bg-indigo-600', 'text-white', 'border-indigo-600', 'shadow-sm');

            // Filter Rows
            document.querySelectorAll('.supply-group').forEach(group => {
                if (cat === 'ALL' || group.dataset.category === cat) {
                    group.classList.remove('hidden');
                } else {
                    group.classList.add('hidden');
                }
            });
        });
    });

    // COST ITEM CREATION
    document.getElementById('create-cost-item-form')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const fd = new FormData(e.target);
        const data = Object.fromEntries(fd.entries());
        data.isActive = true;
        data.isGlobal = fd.has('isGlobal');

        try {
            const res = await fetch('/api/costs/items', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            if (res.ok) {
                window.location.reload();
            } else {
                alert('Error al crear el √≠tem');
            }
        } catch (error) {
            console.error(error);
        }
    });

    window.toggleCostActive = async function(id, newState) {
        try {
            await fetch(`/api/costs/items/${id}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ isActive: newState })
            });
            window.location.reload();
        } catch (error) {
            console.error(error);
        }
    };

    window.deleteCostItem = async function(id) {
        if (!confirm('¬øSeguro que deseas eliminar este √≠tem? Esto afectar√° los c√°lculos proyectados (pero no el historial guardado).')) return;
        try {
            await fetch(`/api/costs/items/${id}`, { method: 'DELETE' });
            window.location.reload();
        } catch (error) {
            console.error(error);
        }
    };

    // PRODUCT LINKING LOGIC
    let currentProductId = null;
    const prodSelector = document.getElementById('product-selector');
    const costCheckboxes = document.querySelectorAll('.cost-checkbox');
    const supplyCheckboxes = document.querySelectorAll('.supply-checkbox');
    const supplyQtys = document.querySelectorAll('.supply-qty');
    const yieldToggles = document.querySelectorAll('.yield-toggle');
    const saveProdCostsBtn = document.getElementById('save-product-costs');
    const prodLoading = document.getElementById('product-loading');
    
    // UI Calculation els
    const calcCard = document.getElementById('product-calc-card');
    const calcBase = document.getElementById('calc-base');
    const calcCosts = document.getElementById('calc-costs');
    const calcMargin = document.getElementById('calc-margin');
    const calcPercent = document.getElementById('calc-percent');

    let currentBasePrice = 0;

    function recalculateImpact() {
        if (!currentProductId) return;
        let totalCost = 0;

        // 1. Cost Items (Percentages and Fixed)
        costCheckboxes.forEach(cb => {
            if (cb.checked) {
                const isPercent = cb.getAttribute('data-type') === 'percentage';
                const val = parseFloat(cb.getAttribute('data-value'));
                if (isPercent) {
                    totalCost += (currentBasePrice * (val / 100));
                } else {
                    totalCost += val;
                }
            }
        });

        // 2. Supplies (Unit Cost * Quantity)
        supplyCheckboxes.forEach(cb => {
            if (cb.checked) {
                const supplyId = cb.value;
                const unitCost = parseFloat(cb.getAttribute('data-cost'));
                
                const yieldContainer = document.querySelector(`.yield-container[data-id="${supplyId}"]`);
                const subtotalEl = document.querySelector(`.row-subtotal[data-id="${supplyId}"]`);
                let qty = 0;
                
                if (yieldContainer && !yieldContainer.classList.contains('hidden')) {
                    const used = parseFloat(yieldContainer.querySelector('.yield-used').value) || 0;
                    const total = parseFloat(yieldContainer.querySelector('.yield-total').value) || 1;
                    qty = used / total;
                } else {
                    const qtyInput = document.querySelector(`.supply-qty[data-id="${supplyId}"]`);
                    qty = parseFloat(qtyInput.value) || 0;
                }
                
                const subtotal = unitCost * qty;
                totalCost += subtotal;

                if (subtotalEl) {
                    if (qty > 0) {
                        subtotalEl.textContent = `$${subtotal.toLocaleString('es-AR', {minimumFractionDigits: 2})}`;
                        subtotalEl.classList.remove('hidden');
                    } else {
                        subtotalEl.classList.add('hidden');
                    }
                }
            } else {
                // Hide subtotal if not checked
                const subtotalEl = document.querySelector(`.row-subtotal[data-id="${cb.value}"]`);
                if (subtotalEl) subtotalEl.classList.add('hidden');
            }
        });

        const margin = currentBasePrice - totalCost;
        const roi = currentBasePrice > 0 ? ((margin / currentBasePrice) * 100).toFixed(1) : 0;

        calcBase.textContent = `$${currentBasePrice.toLocaleString('es-AR')}`;
        calcCosts.textContent = `-$${totalCost.toLocaleString('es-AR', {minimumFractionDigits: 2})}`;
        calcMargin.textContent = `$${margin.toLocaleString('es-AR', {minimumFractionDigits: 2})}`;
        calcPercent.textContent = `${roi}%`;
        
        calcMargin.className = margin >= 0 ? "text-emerald-600 font-extrabold" : "text-rose-600 font-extrabold";
        calcPercent.className = margin >= 0 ? "text-emerald-700" : "text-rose-700";
    }

    prodSelector?.addEventListener('change', async (e) => {
        const id = e.target.value;
        currentProductId = id;
        
        // Toggle disabled state
        costCheckboxes.forEach(cb => cb.disabled = !id);
        supplyCheckboxes.forEach(cb => cb.disabled = !id);
        supplyQtys.forEach(input => input.disabled = !id);
        saveProdCostsBtn.disabled = !id;
        
        if (!id) {
            calcCard.classList.add('hidden');
            costCheckboxes.forEach(cb => {
                const isGlobal = cb.getAttribute('data-global') === 'true';
                if(!isGlobal) {
                    cb.checked = false;
                    cb.closest('.toggle-label').classList.remove('ring-2', 'ring-indigo-500', 'bg-indigo-50/30');
                }
            });
            supplyCheckboxes.forEach(cb => cb.checked = false);
            supplyQtys.forEach(input => input.value = 0);
            yieldToggles.forEach(btn => {
                btn.disabled = true;
                btn.classList.remove('text-indigo-600', 'bg-indigo-50');
            });
            document.querySelectorAll('.yield-container').forEach(c => c.classList.add('hidden'));
            document.querySelectorAll('.qty-container').forEach(c => c.classList.remove('hidden'));
            return;
        }

        const option = e.target.options[e.target.selectedIndex];
        currentBasePrice = parseFloat(option.getAttribute('data-price') || "0");
        calcCard.classList.remove('hidden');

        prodLoading.classList.remove('hidden');

        try {
            // Fetch Cost Items
            const resCosts = await fetch(`/api/products/${id}/costs`);
            const links = await resCosts.json();
            const linkedIds = links.map(l => l.costItemId.toString());

            // Fetch Supplies
            const resSupplies = await fetch(`/api/products/${id}/supplies`);
            const linkedSupplies = await resSupplies.json();
            const linkedSupplyIds = linkedSupplies.map(ls => ls.supplyId.toString());

            // Update Cost Item Checkboxes
            costCheckboxes.forEach(cb => {
                const isGlobal = cb.getAttribute('data-global') === 'true';
                if (!isGlobal) {
                    cb.checked = linkedIds.includes(cb.value);
                    const label = cb.closest('.toggle-label');
                    if (cb.checked) label.classList.add('ring-2', 'ring-indigo-500', 'bg-indigo-50/30');
                    else label.classList.remove('ring-2', 'ring-indigo-500', 'bg-indigo-50/30');
                }
            });

            // Update Supply Checkboxes & Quantities
            supplyCheckboxes.forEach(cb => {
                const linked = linkedSupplies.find(ls => ls.supplyId.toString() === cb.value);
                cb.checked = !!linked;
                
                const yieldBtn = document.querySelector(`.yield-toggle[data-id="${cb.value}"]`);
                const yieldCont = document.querySelector(`.yield-container[data-id="${cb.value}"]`);
                const qtyCont = document.querySelector(`.qty-container[data-id="${cb.value}"]`);
                const qtyInput = document.querySelector(`.supply-qty[data-id="${cb.value}"]`);
                
                yieldBtn.disabled = !id;
                
                if (linked && linked.partsUsed && linked.partsTotal) {
                    // Show yield mode
                    qtyCont.classList.add('hidden');
                    yieldCont.classList.remove('hidden');
                    yieldBtn.classList.add('text-indigo-600', 'bg-indigo-50');
                    
                    yieldCont.querySelector('.yield-used').value = linked.partsUsed;
                    yieldCont.querySelector('.yield-total').value = linked.partsTotal;
                } else {
                    // Standard mode
                    qtyCont.classList.remove('hidden');
                    yieldCont.classList.add('hidden');
                    yieldBtn.classList.remove('text-indigo-600', 'bg-indigo-50');
                    qtyInput.value = linked ? linked.quantity : 0;
                }
            });

            recalculateImpact();
        } catch (error) {
            console.error(error);
        } finally {
            prodLoading.classList.add('hidden');
        }
    });

    costCheckboxes.forEach(cb => {
        cb.addEventListener('change', (e) => {
            const label = e.target.closest('.toggle-label');
            if (e.target.checked) label.classList.add('ring-2', 'ring-indigo-500', 'bg-indigo-50/30');
            else label.classList.remove('ring-2', 'ring-indigo-500', 'bg-indigo-50/30');
            recalculateImpact();
        });
    });

    supplyCheckboxes.forEach(cb => {
        cb.addEventListener('change', recalculateImpact);
    });

    supplyQtys.forEach(input => {
        input.addEventListener('input', recalculateImpact);
    });

    document.querySelectorAll('.yield-used, .yield-total').forEach(input => {
        input.addEventListener('input', recalculateImpact);
    });

    yieldToggles.forEach(btn => {
        btn.addEventListener('click', (e) => {
            const id = e.currentTarget.getAttribute('data-id');
            const qtyCont = document.querySelector(`.qty-container[data-id="${id}"]`);
            const yieldCont = document.querySelector(`.yield-container[data-id="${id}"]`);
            
            const isYield = qtyCont.classList.contains('hidden');
            
            if (isYield) {
                // Switch to Qty
                qtyCont.classList.remove('hidden');
                yieldCont.classList.add('hidden');
                e.currentTarget.classList.remove('text-indigo-600', 'bg-indigo-50');
            } else {
                // Switch to Yield
                qtyCont.classList.add('hidden');
                yieldCont.classList.remove('hidden');
                e.currentTarget.classList.add('text-indigo-600', 'bg-indigo-50');
            }
            recalculateImpact();
        });
    });

    // Expand/Collapse Logic for linking section
    document.querySelectorAll('.supply-item-row[data-has-children="true"]').forEach(row => {
        row.addEventListener('click', (e) => {
            if (e.target.closest('input') || e.target.closest('button')) return;
            
            const id = row.getAttribute('data-id');
            const list = document.querySelector(`.children-list[data-parent-of-list="${id}"]`);
            const chevron = row.querySelector('.chevron-icon');
            
            if (list) {
                const isHidden = list.classList.contains('hidden');
                if (isHidden) {
                    list.classList.remove('hidden');
                    if (chevron) chevron.style.transform = 'rotate(90deg)';
                } else {
                    list.classList.add('hidden');
                    if (chevron) chevron.style.transform = 'rotate(0deg)';
                }
            }
        });
    });

    saveProdCostsBtn?.addEventListener('click', async () => {
        if (!currentProductId) return;
        
        const selectedCostIds = Array.from(costCheckboxes)
            .filter(cb => cb.checked && cb.getAttribute('data-global') !== 'true')
            .map(cb => parseInt(cb.value));

        const selectedSupplies = Array.from(supplyCheckboxes)
            .filter(cb => cb.checked)
            .map(cb => {
                const supplyId = cb.value;
                const yieldCont = document.querySelector(`.yield-container[data-id="${supplyId}"]`);
                const isYield = !yieldCont.classList.contains('hidden');
                
                if (isYield) {
                    const used = parseFloat(yieldCont.querySelector('.yield-used').value) || 0;
                    const total = parseFloat(yieldCont.querySelector('.yield-total').value) || 1;
                    return {
                        supplyId: parseInt(supplyId),
                        quantity: used / total,
                        partsUsed: used,
                        partsTotal: total
                    };
                } else {
                    return {
                        supplyId: parseInt(supplyId),
                        quantity: parseFloat(document.querySelector(`.supply-qty[data-id="${supplyId}"]`).value) || 0,
                        partsUsed: null,
                        partsTotal: null
                    };
                }
            });
        
        saveProdCostsBtn.innerHTML = '<div class="animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2"></div> Guardando...';
        saveProdCostsBtn.disabled = true;

        try {
            // 1. Save Cost Items
            await fetch(`/api/products/${currentProductId}/costs`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ costItemIds: selectedCostIds })
            });

            // 2. Save Supplies
            await fetch(`/api/products/${currentProductId}/supplies`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ supplies: selectedSupplies })
            });

            // Show success button state
            saveProdCostsBtn.innerHTML = '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> Guardado!';
            saveProdCostsBtn.classList.replace('bg-gray-900', 'bg-emerald-600');
            saveProdCostsBtn.classList.replace('hover:bg-black', 'hover:bg-emerald-700');
            
            setTimeout(() => {
                saveProdCostsBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 mr-2"><path d="M15.2 3a2 2 0 0 1 1.4.6l3.8 3.8a2 2 0 0 1 .6 1.4V19a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z"/><path d="M17 21v-7a1 1 0 0 0-1-1H8a1 1 0 0 0-1 1v7"/><path d="M7 3v4a1 1 0 0 0 1 1h7"/></svg> Guardar Enlaces';
                saveProdCostsBtn.classList.replace('bg-emerald-600', 'bg-gray-900');
                saveProdCostsBtn.classList.replace('hover:bg-emerald-700', 'hover:bg-black');
                saveProdCostsBtn.disabled = false;
            }, 2000);
        } catch (err) {
            console.error(err);
            saveProdCostsBtn.innerHTML = 'Error al guardar';
            saveProdCostsBtn.disabled = false;
        }
    });

    // SHIPPING COSTS
    window.handleAddZone = async function() {
        const zoneInput = document.getElementById('new-zone-name');
        const costInput = document.getElementById('new-zone-cost');
        
        if (!zoneInput.value || !costInput.value) return alert('Completar ambos campos');

        try {
            const res = await fetch('/api/costs/shipping', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ zone: zoneInput.value, realCost: parseFloat(costInput.value) })
            });
            if (res.ok) window.location.reload();
            else alert('Error al guardar zona');
        } catch(error) {
            console.error(error);
        }
    }

    window.deleteZone = async function(id, btn) {
        if (!confirm('Realiamente eliminar la zona?')) return;
        try {
            await fetch(`/api/costs/shipping/${id}`, { method: 'DELETE' });
            btn.closest('tr').remove();
        } catch(err) {
            console.error(err);
        }
    }

</script>
