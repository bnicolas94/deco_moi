---
import { db } from '@/lib/db/connection';
import { siteConfig } from '@/lib/db/schema';
import { eq } from 'drizzle-orm';

const wpConfig = await db.select().from(siteConfig).where(eq(siteConfig.key, 'contact_whatsapp')).limit(1);
const instagramConfig = await db.select().from(siteConfig).where(eq(siteConfig.key, 'social_instagram')).limit(1);

const wpNumberRaw = wpConfig.length > 0 && wpConfig[0].value ? String(wpConfig[0].value) : '';
const wpNumber = wpNumberRaw.replace(/\D/g, '');
let wpLink = '#';
if (wpNumber) {
    wpLink = `https://wa.me/${wpNumber}?text=Hola,%20me%20gustar%C3%ADa%20hacer%20una%20consulta`;
}

const instagramLink = instagramConfig.length > 0 && instagramConfig[0].value ? String(instagramConfig[0].value) : 'https://instagram.com';
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Deco Moi | Estamos en renovación</title>
    <meta name="description" content="Nos estamos renovando. Muy pronto estrenaremos nuestra nueva tienda online de souvenirs y regalos personalizados." />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Open+Sans:wght@300;400;500;600&display=swap" rel="stylesheet" />
</head>
<body>
    <main class="maintenance-page">
        <!-- Decorative blobs -->
        <div class="blob blob-1" aria-hidden="true"></div>
        <div class="blob blob-2" aria-hidden="true"></div>
        <div class="blob blob-3" aria-hidden="true"></div>

        <div class="maintenance-card">
            <!-- Logo -->
            <div class="logo-wrapper anim-item" style="--delay: 0ms;">
                <div class="logo-circle">
                    <span class="logo-letter">D</span>
                </div>
                <div class="logo-text">
                    <span class="logo-brand">Deco Moi</span>
                    <span class="logo-tagline">Souvenirs & Regalos</span>
                </div>
            </div>

            <!-- Separador dorado decorativo -->
            <div class="separator anim-item" style="--delay: 150ms;">
                <span class="sep-dot"></span>
                <span class="sep-line"></span>
                <svg class="sep-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                </svg>
                <span class="sep-line"></span>
                <span class="sep-dot"></span>
            </div>

            <!-- Textos -->
            <h1 class="main-title anim-item" style="--delay: 250ms;">
                Nos estamos renovando
            </h1>
            
            <p class="subtitle anim-item" style="--delay: 350ms;">
                Muy pronto estrenaremos nuestra nueva tienda, más linda y fácil que nunca.
            </p>
            
            <p class="secondary-text anim-item" style="--delay: 450ms;">
                Seguinos en Instagram para no perderte nada
            </p>

            <!-- Botones -->
            <div class="buttons anim-item" style="--delay: 550ms;">
                {wpNumber && (
                    <a href={wpLink} target="_blank" rel="noopener noreferrer" class="btn btn-primary">
                        <svg class="btn-icon" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                        </svg>
                        Contacto vía WhatsApp
                    </a>
                )}
                
                <a href={instagramLink} target="_blank" rel="noopener noreferrer" class="btn btn-outline">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                        <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                        <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                    </svg>
                    Ir a Instagram
                </a>
            </div>

            <!-- Footer -->
            <footer class="footer anim-item" style="--delay: 700ms;">
                &copy; {new Date().getFullYear()} Deco Moi. Todos los derechos reservados.
            </footer>
        </div>
    </main>
</body>
</html>

<style>
    /* ─── Variables ─────────────────────── */
    :root {
        --primary: #E8C4A6;
        --primary-dark: #D4A07A;
        --secondary: #8B7355;
        --accent: #C9A980;
        --off-white: #FAF8F6;
        --black: #1A1A1A;
    }

    /* ─── Reset & Base ──────────────────── */
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    
    body {
        font-family: 'Open Sans', sans-serif;
        background: var(--off-white);
        color: var(--black);
        min-height: 100vh;
        -webkit-font-smoothing: antialiased;
    }

    /* ─── Page Container ────────────────── */
    .maintenance-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1.5rem;
        position: relative;
        overflow: hidden;
    }

    /* ─── Decorative Blobs ──────────────── */
    .blob {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.15;
        pointer-events: none;
        z-index: 0;
    }
    .blob-1 {
        width: 400px; height: 400px;
        background: var(--primary);
        top: -100px; left: -100px;
        animation: float 8s ease-in-out infinite;
    }
    .blob-2 {
        width: 350px; height: 350px;
        background: var(--accent);
        bottom: -50px; right: -80px;
        animation: float 10s ease-in-out infinite reverse;
    }
    .blob-3 {
        width: 250px; height: 250px;
        background: var(--primary-dark);
        top: 50%; left: 50%;
        transform: translate(-50%, -50%);
        opacity: 0.08;
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0); }
        50% { transform: translate(20px, -25px); }
    }

    /* ─── Main Card ─────────────────────── */
    .maintenance-card {
        position: relative;
        z-index: 1;
        max-width: 560px;
        width: 100%;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.75rem;
        padding: 3rem 2.5rem;
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 1.5rem;
        border: 1px solid rgba(232, 196, 166, 0.25);
        box-shadow:
            0 4px 6px -1px rgba(0, 0, 0, 0.04),
            0 20px 50px -12px rgba(201, 169, 128, 0.15);
    }

    /* ─── Logo ──────────────────────────── */
    .logo-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
    }
    .logo-circle {
        width: 72px; height: 72px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 24px rgba(212, 160, 122, 0.3);
    }
    .logo-letter {
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
        font-size: 1.75rem;
        color: white;
        line-height: 1;
    }
    .logo-text {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .logo-brand {
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
        font-size: 1.5rem;
        color: var(--black);
        letter-spacing: -0.01em;
    }
    .logo-tagline {
        font-family: 'Open Sans', sans-serif;
        font-size: 0.65rem;
        color: #999;
        text-transform: uppercase;
        letter-spacing: 0.25em;
        margin-top: 2px;
    }

    /* ─── Separator ─────────────────────── */
    .separator {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--accent);
    }
    .sep-line {
        width: 40px; height: 1px;
        background: var(--accent);
        opacity: 0.5;
    }
    .sep-dot {
        width: 4px; height: 4px;
        border-radius: 50%;
        background: var(--accent);
        opacity: 0.6;
    }
    .sep-icon {
        width: 18px; height: 18px;
        opacity: 0.7;
    }

    /* ─── Typography ────────────────────── */
    .main-title {
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
        font-size: 2rem;
        line-height: 1.2;
        color: var(--black);
    }
    .subtitle {
        font-family: 'Open Sans', sans-serif;
        font-weight: 300;
        font-size: 1.1rem;
        line-height: 1.6;
        color: var(--secondary);
        max-width: 420px;
    }
    .secondary-text {
        font-size: 0.9rem;
        color: #999;
    }

    @media (min-width: 640px) {
        .main-title { font-size: 2.5rem; }
        .subtitle { font-size: 1.2rem; }
    }

    /* ─── Buttons ───────────────────────── */
    .buttons {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        width: 100%;
        margin-top: 0.5rem;
    }
    @media (min-width: 480px) {
        .buttons {
            flex-direction: row;
            justify-content: center;
            width: auto;
        }
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.875rem 2rem;
        border-radius: 100px;
        font-family: 'Open Sans', sans-serif;
        font-weight: 500;
        font-size: 0.9rem;
        text-decoration: none;
        cursor: pointer;
        border: none;
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }
    .btn-icon {
        width: 18px; height: 18px;
        flex-shrink: 0;
    }
    .btn-primary {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: white;
        box-shadow: 0 4px 12px rgba(212, 160, 122, 0.3);
    }
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(212, 160, 122, 0.4);
    }
    .btn-outline {
        background: transparent;
        color: var(--primary-dark);
        border: 2px solid var(--primary);
    }
    .btn-outline:hover {
        background: rgba(232, 196, 166, 0.08);
        border-color: var(--primary-dark);
    }

    /* ─── Footer ────────────────────────── */
    .footer {
        font-size: 0.75rem;
        color: #bbb;
        font-weight: 300;
        margin-top: 0.5rem;
    }

    /* ─── Animations ────────────────────── */
    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .anim-item {
        opacity: 0;
        animation: slideUp 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        animation-delay: var(--delay, 0ms);
    }
</style>
